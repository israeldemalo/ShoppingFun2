<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="250dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/logo"
    tools:context="israel.shoppingfun.dialogs.AddListDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/etListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="List Name"
        android:layout_toLeftOf="@+id/btnAddUserList"
        android:layout_toStartOf="@+id/btnAddUserList" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnAddUserList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#8d00f9"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#067cf2"
        fancy:fb_focusColor="#699ff7"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_iconPosition="right"
        fancy:fb_radius="8dp"
        fancy:fb_text="Add"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
